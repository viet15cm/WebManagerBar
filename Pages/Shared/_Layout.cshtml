<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebManager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <div class="d-sm-none collapse" id="navSearch" style="background: #6d14bc;">
            <div class="container p-2">
                <form class="form-inline">
                    <div class="input-group  input-group-lg">
                        <span class="input-group-text" id="inputGroup-sizing-lg"><i class="fas fa-search"></i></span>                       
                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                    </div>
                </form>
            </div>
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar border" style="background: #6d14bc;">
            <div class="container-fluid p-0 m-0">
                <div class="d-md-none">
                    <ul class="nav spaceItem">
                        <li class="nav-item">
                            <a class="nav-link btn text-light" data-bs-toggle="collapse" href="#navIconMenu" role="button" aria-expanded="false" aria-controls="navIconMenu">
                                <i class="fas fa-align-justify"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn text-light"><i class="fas fa-home"></i></a>
                        </li>
                    </ul>

                </div>

                <div class="d-md-none">
                    <ul class="nav">
                        <li class="nav-link">
                            @*<img src="https://png.pngtree.com/thumb_back/fw800/background/20190221/ourmid/pngtree-tanabata-full-screen-banner-background-flowers-pink-image_10384.jpg" style="width: 100px; height:30px" />*@
                        </li>
                    </ul>

                </div>

                <div class="justify-content-between d-none d-sm-block">
                     @await Component.InvokeAsync("Navbar", "Navbar")
                </div>

                <div class="d-flex justify-content-between ml-0">
                    <ul class="nav spaceItem">
                        @*<li class="nav-item">
                            <a class="round-button d-sm-none">
                                <i class="fas fa-home"></i>
                            </a>

                        </li>*@
                        <li class="nav-item">
                            <a class="round-button d-sm-none text-light" data-bs-toggle="collapse" href="#navSearch" role="button" aria-expanded="false" aria-controls="navSearch">
                                <i class="fas fa-search"></i>
                            </a>
                        </li>
                        @await Component.InvokeAsync("Navbar", "NavbarLogin");
                    </ul>

                </div>
               

                @* <div class="d-flex justify-content-between ml-0">
                    <form class=" form-inline my-2 my-lg-0 mr-4 d-none d-sm-block">
                        <input class="form-control form-control-sm mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-sm btn-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>*@
            </div>
        </nav>
        <div class="d-sm-none collapse" id="navIconMenu" style="background: #6d14bc ">
            <div class="container">
                @await Component.InvokeAsync("Navbar", "NavbarCollapse")
                @*<ul class="navbar-nav">
                    <li class="nav-item"><a href="#" class="nav-link text-light">Trang chủ</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-light">Tùy chọn</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-light">Liên hệ</a></li>
                    <li class="nav-item">
                        <a class="nav-link text-light"
                           data-bs-toggle="collapse" href="#navList" role="button" aria-expanded="false" aria-controls="navList">List</a>
                        <div class="collapse" id="navList">
                            <div class="container">
                                <ul class="navbar-nav">
                                    <li class="nav-item"><a href="" class="nav-link text-light">Home</a></li>
                                    <li class="nav-item"><a href="" class="nav-link text-light">Index</a></li>
                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>*@
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebManager - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
