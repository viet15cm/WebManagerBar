@{
    var dataItem = Model;   
}

<ul class="list-group" style="font-family: Monospace;">
    @foreach (var item in dataItem.Items)
    {
        @if (item.UrlPage != dataItem.CurentUrlPage)
        {           
            
                <li class="list-group">
                    <a class="list-group-item list-group-item-action border-0" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/Index">@item.DisPlayLG</a>
                </li>
        }
        else
        {          
                <li class="list-group" >
                    <a class="list-group-item list-group-item-action active" asp-area="@item.UrlAreas" asp-page="/Index">@item.DisPlayLG</a>
                </li>
            
        }
    }


    @foreach (var item in dataItem.Items_1)
    {
        <li class="list-group">
            <a class="list-group-item list-group-item-action border-0" data-bs-toggle="collapse" href="#@item.UrlPage" role="button" aria-expanded="false" aria-controls=" @item.UrlPage">
              @item.DisPlayLG
            </a>
            @if (item.UrlPage != dataItem.CurentUrlPage)
            {
                <div class="collapse" id="@item.UrlPage">
                    <ul class="list-group">
                        @foreach (var item_1 in item.collapseItemChildrens)
                        {

                            @if (item_1.UrlPageChild != dataItem.CurentUrlPageChild || item.UrlPage != dataItem.CurentUrlPage)
                            {
                                @if (string.IsNullOrEmpty(item_1.UrlPageChild))
                                {

                                    <li class="list-group ms-2">
                                        <a class="list-group-item list-group-item-action border-0" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/Index">@item_1.DisPlayLG</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="list-group ms-2">
                                        <a class="list-group-item list-group-item-action border-0" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/@item_1.UrlPageChild">@item_1.DisPlayLG</a>
                                    </li>
                                }
                            }
                            else
                            {
                                @if (string.IsNullOrEmpty(item_1.UrlPageChild))
                                {
                                    <li class="list-group ms-2" aria-current="true">
                                        <a class="list-group-item list-group-item-action active" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/Index">@item_1.DisPlayLG</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="list-group ms-2">
                                        <a class="list-group-item list-group-item-action active" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/@item_1.UrlPageChild">@item_1.DisPlayLG</a>
                                    </li>
                                }

                            }
                        }
                    </ul>
                </div>
            }
            else
            {
                <div class="collapse show" id="@item.UrlPage">
                    <ul class="list-group">
                        @foreach (var item_1 in item.collapseItemChildrens)
                        {

                            @if (item_1.UrlPageChild != dataItem.CurentUrlPageChild || item.UrlPage != dataItem.CurentUrlPage)
                            {
                                @if (string.IsNullOrEmpty(item_1.UrlPageChild))
                                {

                                    <li class="list-group ms-2">
                                        <a class="list-group-item list-group-item-action border-0" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/Index">@item_1.DisPlayLG</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="list-group ms-2">
                                        <a class="list-group-item list-group-item-action border-0" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/@item_1.UrlPageChild">@item_1.DisPlayLG</a>
                                    </li>
                                }
                            }
                            else
                            {
                                @if (string.IsNullOrEmpty(item_1.UrlPageChild))
                                {
                                    <li class="list-group" aria-current="true">
                                        <a class="list-group-item list-group-item-action active" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/Index">@item_1.DisPlayLG</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="list-group ms-2">
                                        <a class="list-group-item list-group-item-action active" asp-area="@item.UrlAreas" asp-page="/@item.UrlPage/@item_1.UrlPageChild">@item_1.DisPlayLG</a>
                                    </li>
                                }

                            }
                        }
                    </ul>
                </div>
            }

        </li>

    }

</ul>