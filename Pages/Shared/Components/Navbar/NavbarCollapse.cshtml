@{
    var dataItem = Model;
}

<div class="container">
    <ul class="navbar-nav">
        @foreach (var item in dataItem.Items)
        {
            @if (item.UrlAreas != dataItem.CurentUrlAreas)
            {
                @if (string.IsNullOrEmpty(item.UrlPage) && string.IsNullOrEmpty(item.UrlAreas))
                {
                    <li class="nav-item">
                        <a class="nav-link text-light font-monospace" asp-area="" asp-page="/Index">@item.DisPlayLG</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-light font-monospace" asp-area="@item.UrlAreas" asp-page="/Index">@item.DisPlayLG</a>
                    </li>
                }

            }
            else
            {
                @if (string.IsNullOrEmpty(item.UrlPage) && string.IsNullOrEmpty(item.UrlAreas))
                {
                    <li class="nav-item">
                        <a class="nav-link text-info font-monospace" asp-area="" asp-page="/Index">@item.DisPlayLG</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-info font-monospace"  asp-area="@item.UrlAreas" asp-page="/Index">@item.DisPlayLG</a>
                    </li>
                }

            }
        }
    </ul>
</div>